
<div id="strike" lat="{{strike.lat}}" lon="{{strike.lon}}">
  <h2>{{strike.bureau_id}}</h2>
  <h3>Stike Number: {{strike.number}}</h3>
  <ul>
    <li>Country: {{strike.country}}</li>
    <li>Date: {{strike.date}}</li>
    <li>U.S. Narrative: {{strike.narrative}}</li>
    <li>Town: {{strike.town}}</li>
    <li>Location: {{strike.location}}</li>
    <li>Number of Deaths: {{strike.deaths}}</li>
    <li>Minimum Number of Deaths: {{strike.deaths_min}}</li>
    <li>Maximum Number of Deaths: {{strike.deaths_max}}</li>
    {{#each strike.civilians}}
      {{#if this}}
      <li>Civilians Killed: {{strike.civilians}}</li>
      {{else}}
      <li>Civilians Killed: Unknown</li>
      {{/if}}
    {{/each}}
    <li>Number of Injuries: {{strike.injuries}}</li>
    <li>Number of Children Killed: {{strike.children}}</li>
    <li>Intended Target: {{strike.target}}</li>
  </ul>

  <p>{{strike.bij_summary_short}}</p>

  <p>More info: {{strike.bij_link}}</p>
</div>

<div class="row">
  <div class="col-lg-12">
    <div id="map"></div>
  </div>
</div>

<script>
  function initMap() {
      var strikeLat = parseFloat(document.getElementById('strike').getAttribute('lat'));
      var strikeLon = parseFloat(document.getElementById('strike').getAttribute('lon'));
      console.log(strikeLon);
      console.log(strikeLat);
      // Create a map object and specify the DOM element for display.
      var strike = {lat: strikeLat, lng: strikeLon};
      var map = new google.maps.Map(document.getElementById('map'), {
        center: strike,
        // Set mapTypeId to SATELLITE in order
        // to activate satellite imagery.
        mapTypeId: 'hybrid',
        scrollwheel: true,
        zoom: 16,
        // overflow: auto
      });
      var marker = new google.maps.Marker({
        position: strike,
        map: map
      });
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAmYGEhY8eAhN0uAZIvLkKhDXSTuTt9ar4&callback=initMap"
  type="text/javascript"></script>
